@model Practica1.Libro

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="titulo" class="control-label"></label>
                <input asp-for="titulo" class="form-control" />
                <span asp-validation-for="titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resumen" class="control-label"></label>
                <input asp-for="resumen" class="form-control" />
                <span asp-validation-for="resumen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechapubli" class="control-label"></label>
                <input asp-for="fechapubli" class="form-control" />
                <span asp-validation-for="fechapubli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fotoportada" class="control-label"></label>
                <input asp-for="fotoportada" class="form-control" />
                <span asp-validation-for="fotoportada" class="text-danger"></span>
                @if (string.IsNullOrEmpty(@Model.fotoportada))
                {
                    //verificar cuando se cree la carpeta imagen el root
                    <img src="~/image/autor/@Model.fotoportada" class="img-thumbnail" asp-append-version="true" />
                }
            </div>
            <div class="form-group">
                <label asp-for="generoId" class="control-label"></label>
                <select asp-for="generoId" class="form-control" asp-items="ViewBag.generoId"></select>
                <span asp-validation-for="generoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="autorId" class="control-label"></label>
                <select asp-for="autorId" class="form-control" asp-items="ViewBag.autorId"></select>
                <span asp-validation-for="autorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
